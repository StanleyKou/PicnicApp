<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3.33dp"
        android:background="@drawable/listitem_background"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rlUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvTargetNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.67dp"
                android:fontFamily="sans-serif"
                android:text="1"
                android:textColor="@color/scan_text"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTargetNumberDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvTargetNumber"
                android:fontFamily="sans-serif"
                android:text="."
                android:textColor="@color/scan_text"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTargetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.67dp"
                android:layout_toRightOf="@id/tvTargetNumber"
                android:fontFamily="sans-serif"
                android:text="김일동"
                android:textColor="@color/scan_text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTargetPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTargetNumber"
                android:layout_marginLeft="6.67dp"
                android:layout_marginTop="3.33dp"
                android:fontFamily="sans-serif"
                android:text="010-1111-2222"
                android:textColor="@color/scan_text"
                android:textSize="14dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6.67dp"
            android:src="@drawable/check_state_unknown" />

        <RelativeLayout
            android:id="@+id/rlRange"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:layout_toLeftOf="@id/ivFound" >

            <TextView
                android:id="@+id/tvRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif"
                android:text="15m"
                android:textColor="@color/scan_range_text"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>