<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background" >

    <RelativeLayout
        android:id="@+id/rlScan_Menu_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvScanCountLabel"
            android:layout_width="wrap_content"
            android:layout_height="34.669983dip"
            android:layout_marginLeft="14.0dip"
            android:gravity="center_vertical"
            android:text="검색결과:"
            android:textColor="@color/scan_summary_text"
            android:textSize="20.0dip" />

        <TextView
            android:id="@+id/tvScanCount"
            android:layout_width="wrap_content"
            android:layout_height="34.669983dip"
            android:layout_marginLeft="6.669983dip"
            android:layout_toRightOf="@id/tvScanCountLabel"
            android:gravity="center_vertical"
            android:text="27 / 30"
            android:textColor="@color/scan_summary_text"
            android:textSize="20.0dip" />

        <Button
            android:id="@+id/btnScan"
            android:layout_width="74.0dip"
            android:layout_height="34.669983dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.669983dip"
            android:background="@color/listitem_clicked"
            android:fontFamily="sans-serif"
            android:padding="0.0dip"
            android:text="스캔"
            android:textColor="@color/scan_text"
            android:textSize="9.0dip" />
    </RelativeLayout>

    <View
        android:id="@+id/view_divider_scan"
        android:layout_width="fill_parent"
        android:layout_height="0.6700001dip"
        android:layout_below="@id/rlScan_Menu_1"
        android:background="#ffcccccc" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_divider_scan"
        android:background="@color/background_light"
        android:paddingTop="10.0dip" >

        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="3.3299866dip" >

            <ListView
                android:id="@+id/lvDevice"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:listSelector="@drawable/listitem_selector"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip" />

            <TextView
                android:id="@+id/tvNodata"
                android:layout_width="250.0dip"
                android:layout_height="100.0dip"
                android:layout_centerInParent="true"
                android:background="@color/no_item_background"
                android:gravity="center"
                android:text="@string/no_list_data"
                android:textColor="@color/list_no_item_text"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>