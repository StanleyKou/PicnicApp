<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <RelativeLayout
        android:id="@+id/rlScan_Menu_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnScanStop"
            android:layout_width="74dp"
            android:layout_height="34.67dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.67dp"
            android:background="@color/listitem_clicked"
            android:fontFamily="sans-serif"
            android:padding="0dp"
            android:text="스캔 중지"
            android:textColor="@color/scan_text"
            android:textSize="9dp" />

        <Button
            android:id="@+id/btnScanStart"
            android:layout_width="74dp"
            android:layout_height="34.67dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6.67dp"
            android:layout_toLeftOf="@id/btnScanStop"
            android:background="@color/listitem_clicked"
            android:fontFamily="sans-serif"
            android:padding="0dp"
            android:text="스캔 시작"
            android:textColor="@color/scan_text"
            android:textSize="9dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_divider_scan"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_below="@id/rlScan_Menu_1"
        android:background="#CCCCCC" />

    <RelativeLayout
        android:id="@+id/rlScan_Menu_2"
        android:layout_width="match_parent"
        android:layout_height="34.34dp"
        android:layout_below="@id/view_divider_scan"
        android:background="@color/scan_summary_background" >

        <TextView
            android:id="@+id/tvScanCountLabel"
            android:layout_width="wrap_content"
            android:layout_height="34.67dp"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:text="검색결과:"
            android:textColor="@color/scan_summary_text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvScanCount"
            android:layout_width="wrap_content"
            android:layout_height="34.67dp"
            android:layout_marginLeft="6.67dp"
            android:layout_toRightOf="@id/tvScanCountLabel"
            android:gravity="center_vertical"
            android:text="27 / 30"
            android:textColor="@color/scan_summary_text"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnSetting"
            android:layout_width="200dp"
            android:layout_height="34.67dp"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/tvScanCount"
            android:drawableEnd="@drawable/setting"
            android:text="검색대상 수정"
            android:textColor="@color/scan_summary_text"
            android:textSize="12dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlScan_Menu_2"
        android:background="@color/background_light"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3.33dp" >

            <ListView
                android:id="@+id/lvDevice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@drawable/listitem_selector"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>