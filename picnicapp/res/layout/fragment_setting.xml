<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_background"
    android:paddingLeft="13.33dp"
    android:paddingRight="13.33dp" >

    <RelativeLayout
        android:id="@+id/rlSetting1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="13.33dp"
            android:layout_marginLeft="13.33dp"
            android:layout_marginTop="13.33dp"
            android:gravity="center_vertical"
            android:text="인원체크 목록 불러오기"
            android:textColor="@color/scan_summary_text"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnLoadCheckList"
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.67dp"
            android:background="@drawable/btn_background"
            android:fontFamily="sans-serif"
            android:padding="0dp"
            android:text="열기"
            android:textColor="@color/scan_summary_text"
            android:textSize="12dp" />
    </RelativeLayout>

    <View
        android:id="@+id/viewDividerSetting1"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_below="@id/rlSetting1"
        android:background="#CCCCCC" />

    <RelativeLayout
        android:id="@+id/rlSetting2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewDividerSetting1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="13.33dp"
            android:layout_marginLeft="13.33dp"
            android:layout_marginTop="13.33dp"
            android:gravity="center_vertical"
            android:text="인원체크 목록 제거"
            android:textColor="@color/scan_summary_text"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnClearCheckList"
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.67dp"
            android:background="@drawable/btn_background_red"
            android:fontFamily="sans-serif"
            android:padding="0dp"
            android:text="제거"
            android:textColor="@color/scan_summary_text"
            android:textSize="12dp" />
    </RelativeLayout>

    <View
        android:id="@+id/viewDividerSetting2"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_below="@id/rlSetting2"
        android:background="#CCCCCC" />

    <RelativeLayout
        android:id="@+id/rlSetting3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewDividerSetting2" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="13.33dp"
            android:layout_marginLeft="13.33dp"
            android:layout_marginTop="13.33dp"
            android:gravity="center_vertical"
            android:text="지킴이 목록 불러오기"
            android:textColor="@color/scan_summary_text"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnLoadGuardList"
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.67dp"
            android:background="@drawable/btn_background"
            android:fontFamily="sans-serif"
            android:padding="0dp"
            android:text="열기"
            android:textColor="@color/scan_summary_text"
            android:textSize="12dp" />
    </RelativeLayout>

    <View
        android:id="@+id/viewDividerSetting3"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_below="@id/rlSetting3"
        android:background="#CCCCCC" />

    <RelativeLayout
        android:id="@+id/rlSetting4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewDividerSetting3" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="13.33dp"
            android:layout_marginLeft="13.33dp"
            android:layout_marginTop="13.33dp"
            android:gravity="center_vertical"
            android:text="지킴이 목록 제거"
            android:textColor="@color/scan_summary_text"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnClearGuardList"
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.67dp"
            android:background="@drawable/btn_background_red"
            android:fontFamily="sans-serif"
            android:padding="0dp"
            android:text="제거"
            android:textColor="@color/scan_summary_text"
            android:textSize="12dp" />
    </RelativeLayout>

    <View
        android:id="@+id/viewDividerSetting4"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_below="@id/rlSetting2"
        android:background="#CCCCCC" />

</RelativeLayout>