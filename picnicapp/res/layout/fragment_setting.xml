<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <RelativeLayout
        android:id="@+id/rlSetting1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvScanCountLabel"
            android:layout_width="wrap_content"
            android:layout_height="34.67dp"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:text="인원체크 목록 불러오기"
            android:textColor="@color/scan_summary_text"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnLoadCheckList"
            android:layout_width="74dp"
            android:layout_height="34.67dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.67dp"
            android:fontFamily="sans-serif"
            android:padding="0dp"
            android:text="열기"
            android:textColor="@color/scan_text"
            android:textSize="9dp" />
    </RelativeLayout>

    <View
        android:id="@+id/viewDividerSetting1"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_below="@id/rlSetting1"
        android:background="#CCCCCC" />

    <RelativeLayout
        android:id="@+id/rlSetting2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewDividerSetting1" >

        <TextView
            android:id="@+id/tvScanCountLabel"
            android:layout_width="wrap_content"
            android:layout_height="34.67dp"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:text="지킴이 목록 불러오기"
            android:textColor="@color/scan_summary_text"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnLoadGuardList"
            android:layout_width="74dp"
            android:layout_height="34.67dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.67dp"
            android:fontFamily="sans-serif"
            android:padding="0dp"
            android:text="열기"
            android:textColor="@color/scan_text"
            android:textSize="9dp" />
    </RelativeLayout>

</RelativeLayout>